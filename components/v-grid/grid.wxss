.v-grid {
  position: relative;
  float: left;
  box-sizing: border-box;
  line-height: 1;
}

.v-grid--bordered:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 2rpx;
  bottom: 0;
  border-right: 2rpx solid #d9d9d9;
  transform-origin: 100% 0;
  transform: scaleX(0.5);
}

.v-grid--bordered:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 2rpx;
  border-bottom: 2rpx solid #d9d9d9;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}

.v-grid--hover {
  opacity: 0.8;
}

.v-grid__thumb {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin: 0 auto;
}

.v-grid__label {
  text-align: center;
  color: #000;
  font-size: 28rpx;
  margin-top: 10rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.v-grid__inner {
  height: 100%;
  width: 100%;
  text-align: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.v-grid--square .v-grid__content {
  position: relative;
  display: block;
  content: ' ';
  padding-bottom: 100%;
}

.v-grid--square .v-grid__inner {
  position: absolute;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}
