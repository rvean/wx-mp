.v-index {
  width: 100%;
  height: 100%;
}

.v-index_content {
  background: #fff;
  position: relative;
  z-index: 1;
  display: inline-block;
  padding: 0 20rpx;
}

.v-index_fixed {
  position: fixed;
  right: 0;
  top: 50%;
  z-index: 10;
  padding-left: 20rpx;
  transform: translateY(-50%);
}

.v-index_fixed-item {
  display: block;
  height: 20px;
  line-height: 20px;
  padding: 0 15rpx;
  text-align: center;
  color: #2d8cf0;
  font-size: 24rpx;
  border-radius: 50%;
}

.v-index_fixed-item-current {
  background: #2d8cf0;
  color: #fff;
}

.v-index_tooltip {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 48rpx;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
}
