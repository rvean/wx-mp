.v-bottomtip, .v-bottomtip-line, .v-bottomtip-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.v-bottomtip {
  width: 65%;
  font-size: 28rpx;
  color: #495060;
  margin: 36rpx auto;
}

.v-bottomtip-loading {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 4rpx solid #e9eaec;
  border-color: #e9eaec #e9eaec #e9eaec #2d8cf0;
  animation: btn-spin 0.6s linear infinite;
  margin-right: 24rpx;
}

.v-bottomtip-text {
  padding: 0 30rpx;
}

.v-bottomtip-line::before, .v-bottomtip-line::after {
  content: ' ';
  flex: 1;
  border-top: 1px solid #dedede;
}

.v-bottomtip-empty {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #e5e5e5;
  display: inline-block;
  margin: 0 20rpx;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}
