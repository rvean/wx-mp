.v-search {
  display: flex;
  align-items: center;
  min-width: 510rpx;
  height: 60rpx;
  overflow: hidden;
}

.v-search_form {
  position: relative;
  display: flex;
  align-items: center;
  flex-grow: 1;
  min-width: 510rpx;
  height: 60rpx;
  overflow: hidden;
}

.v-search_content-center {
  justify-content: center;
}

.v-search_content-left {
  justify-content: flex-start;
}

.v-search_icon {
  margin-left: 24rpx;
  font-weight: bold;
}

.v-search_text {
  font-size: 24rpx;
  max-width: 570rpx;
  margin-left: 16rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.v-search_input {
  flex: 1;
  min-width: 476rpx;
  height: 60rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
}

.v-search_clear {
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 40rpx;
  height: 60rpx;
  padding: 0 10rpx;
  position: relative;
  z-index: 3;
}

button.v-search_button {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  overflow: hidden;
  background: none;
  padding-left: 0;
  padding-right: 0;
  font-weight: normal;
}

.v-search_button::after {
  border: none;
}
