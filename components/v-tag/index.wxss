.v-tag {
  display: inline-block;
  height: 18px;
  line-height: 18px;
  padding: 0 4px;
  border-radius: 2px;
  background: #fff;
  font-size: 11px;
  vertical-align: middle;
  border: 2rpx solid #dddee1;
}

