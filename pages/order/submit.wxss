page, .page {
  width: 100%;
  height: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #f8f8f8;
}

.scroll-view {
  flex: 1;
  overflow: hidden;
}

/* 收货地址 */

.address {
  background: #fff;
  min-height: 150rpx;
  margin-bottom: 15rpx;
}

.address-line {
  width: 100%;
  height: 10rpx;
}

.address-null {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 140rpx;
  font-size: 30rpx;
}

.address-default {
  color: #111;
  font-size: 28rpx;
  padding: 30rpx;
  padding-right: 100rpx;
}

.address-name {
  margin-right: 40rpx;
  font-weight: 700;
}

.address-detail {
  word-break: break-all;
  word-wrap: break-word;
  margin-top: 12rpx;
  color: #333;
}

/* 订单商品 */

.goods-ul {
  padding: 10rpx 0;
  background: #fff;
  margin-bottom: 15rpx;
}

.goods-li {
  background: #fff;
  display: flex;
  padding: 10rpx 28rpx;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
}

.goods-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
}

.goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 28rpx;
  color: #e91f25;
}

.goods-num {
  font-size: 26rpx;
  color: #999;
}

/* 订单明细 */

.order-li {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 36rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
  color: #151515;
}

.order-li:last-child {
  border-bottom: 0;
}

.order-li_text {
  color: #666;
}

/* 底部导航 */

.sub-footer {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #fff;
  text-align: center;
}

.sub-footer_main {
  flex: 1;
  font-size: 28rpx;
  color: #f44;
  padding-right: 25rpx;
  text-align: right;
}

.sub-footer_main text:first-child {
  color: #333;
}

.sub-footer_main text:last-child {
  font-size: 36rpx;
  padding-left: 10rpx;
}

button.sub-footer_btn {
  font-size: 28rpx;
  color: #fff;
  background: #f44;
  line-height: 100rpx;
  border-radius: 0;
  width: 220rpx;
  min-height: 10rpx;
  padding: 0;
  font-weight: normal;
}

.sub-footer_btn.disabled {
  opacity: 0.5;
}
