.page {
  background: #000;
}

.home-img {
  width: 40rpx;
  height: 40rpx;
}

.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  z-index: 10;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.navbar-title {
  line-height: 44px;
  text-align: center;
  font-size: 34rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 1rpx;
  max-width: 360rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.navbar-title_ios {
  font-size: 38rpx;
  font-weight: 500;
  line-height: 44px;
}

.navbar-action {
  position: absolute;
  left: 7px;
  bottom: 7px;
  z-index: 100;
  overflow: hidden;
  width: 172rpx;
  height: 30px;
  border-radius: 34px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.navbar-action::before {
  content: ' ';
  position: absolute;
  border: 1px solid #e9e9e9;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  transform: scale(0.5);
  border-radius: 34px;
  box-sizing: border-box;
}

.navbar-item {
  flex: 1;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  font-size: 0;
}

.navbar-item:active {
  background: #eee;
}

.navbar-br::after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: 0;
  width: 1px;
  height: 18px;
  margin-top: -9px;
  background: #ddd;
  transform: scaleX(0.5);
  transform-origin: 0 0;
}
